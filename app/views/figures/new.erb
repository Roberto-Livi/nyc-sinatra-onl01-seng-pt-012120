<h2>Create New Figure</h2>

<form action="/figures" method="POST">

<label>Name</label>
<input type="text" name="figure[name]" id="figure_name">
<br>

<h2>Titles</h2>

<label>The Mayor</label>
<% @titles.each do |title|
<input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
<% end %>




  
  
  
</form>
